<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sagiperooo">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sagiperooo"
        tools:targetApi="31">

        <activity
            android:name=".main_page"
            android:exported="false" />
        <!-- Homepage Activity -->
        <activity
            android:name=".homepage"
            android:exported="false" /> <!-- Welcome Popup Activity -->
        <activity
            android:name=".welcomepopup"
            android:exported="false" /> <!-- Signup Activity (corrected) -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" /> <!-- Main Activity (launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EarthquakeAlertActivity$MainPageActivity" />

        <activity
            android:name=".WelcomePopupActivity"
            android:exported="false" /> <!-- Preloaded Fonts Metadata -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <activity android:name=".MainPageActivity" />
        <activity android:name=".EarthquakeAlertActivity" />
        <activity android:name=".FloodAlertActivity" />
        <activity android:name=".FireAlertActivity" />




    </application>

</manifest>